{{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show col-sm-6 mx-auto" role="alert">{{success_msg}}
        <button type="button" class="close" data-dismiss='alert' aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}

{{#if error_msg}}
    <div class="alert alert-danger alert-dismissible fade show col-sm-6 mx-auto" role="alert">{{error_msg}}
        <button type="button" class="close" data-dismiss='alert' aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}